<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87a96b"
    tools:context=".GameSceneActivity">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Your score is: 0"
        android:textColor="#ffbf00"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Time: 30"
        android:textColor="#004225"
        android:textSize="25dp"


        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/scoreText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coins_icon_01" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/time_icon_01" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:columnCount="3"
        android:rowCount="5"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageButton
            android:id="@+id/btn_mole_part_01_1"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="256dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_2"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="256dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_3"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="256dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_4"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_5"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_6"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_7"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_8"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />

        <ImageButton
            android:id="@+id/btn_mole_part_01_9"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:saveEnabled="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mole_part_01" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>